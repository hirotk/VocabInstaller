@{
    ViewBag.Title = "Export";
}

@section navigations {    
    <ul class="nav navbar-nav">
        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
        <li class="divider_vertical"></li>
        <li><a href="@Url.Action("Index", "Function")">Function</a></li>
    </ul>
}

<div id="function">
    <h2>Export</h2>
    <p>Click below button to export data to csv file.</p>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <button type="submit" id="sbmExport" class="btn btn-success">
                Export
            </button>
        </div>
    }

    @if (Model != null) {
        <h3>Exported</h3>
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr><th>Id</th><th>UserId</th><th>Question</th></tr>
            </thead>
            <tbody>
                @foreach (var c in Model) {
                    <tr><td>@c.Id</td><td>@c.UserId</td><td>@c.Question</td></tr>
                }
            </tbody>
        </table>
    }
    
    <div class="back_to">
        <a href="@Url.Action("Index", "Function")">Back</a>
    </div>
</div>
