@model VocabInstaller.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

<h1>@ViewBag.Title</h1>

<section id="register_form">
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        
        @Html.ValidationSummary()

        <fieldset>
            <!--<legend>Registration Form</legend>-->
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "control-label", @for = "tbUserName" }):
                @Html.TextBoxFor(m => m.UserName, new { @id = "tbUserName", @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label", @for = "tbPassword" }):
                @Html.PasswordFor(m => m.Password, new { @id = "tbPassword", @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label", @for = "tbConfirmPassword" }):
                @Html.PasswordFor(m => m.ConfirmPassword, new { @id = "tbConfirmPassword", @class = "form-control" })
            </div>

            <div class="form-group submit_button">
                <button type="submit" class="btn btn-warning">
                    Register
                </button>
            </div>
        </fieldset>
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
